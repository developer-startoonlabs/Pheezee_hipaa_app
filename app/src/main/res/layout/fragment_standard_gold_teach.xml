<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/monitorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:orientation="vertical"
    android:background="@color/ic_add_patient_grey_background"
    tools:context="com.start.apps.pheezee.activities.MonitorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_container"
        android:orientation="vertical"
        android:layout_margin="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:id="@+id/part1">

            <LinearLayout
                android:id="@+id/pIdAndPName"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintHorizontal_bias="0.0"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:id="@+id/patientNameContainter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="left">

                    <TextView
                        android:id="@+id/patientNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ebrima"
                        android:text="Name: "
                        android:textColor="@color/pitch_black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/patientName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ebrima"
                        android:text="Mythreyi Kondapi"
                        android:textColor="@color/pitch_black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/patientIdContainter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/patientIdText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ebrima"
                        android:text="Id: "
                        android:textColor="@color/pitch_black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/patientId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ebrima"
                        android:text="1234"
                        android:textColor="@color/pitch_black"
                        android:textSize="16sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/monitor_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                app:layout_constraintHorizontal_bias="0.0"
                android:background="@drawable/round_corner_layout"
                tools:ignore="MissingConstraints"
                android:gravity="right">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/recording_border"
                        >
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:id="@+id/recording_icon"
                            android:src="@drawable/bg_circle_red"></ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/recording_text"
                            android:layout_marginTop="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/good_green"
                            android:paddingStart="5dp"
                            android:text=""></TextView>

                    </LinearLayout>

                </LinearLayout>



                <TextView
                    android:id="@+id/displayTime"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/ebrima"
                    android:text="00:00"
                    android:textColor="@color/good_green"
                    android:layout_marginEnd="20dp"

                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>




            </LinearLayout>


            <LinearLayout
                android:id="@+id/angleContainter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="5sp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/monitor_title"
                app:layout_constraintVertical_bias="0.09"
                android:background="@drawable/round_corner_layout">




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title_ROM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ebrima"
                        android:textAlignment="center"
                        android:paddingStart="50dp"
                        android:gravity="center"
                        android:text="Range of Motion (ROM)"
                        android:paddingEnd="20dp"
                        android:textColor="@color/good_green"

                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/bodyPart"
                        android:layout_below="@+id/title_ROM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ebrima"
                        android:gravity="center"
                        android:text="Body Part:"
                        android:textColor="@color/good_green2"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_margin="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0">
                        <ImageView
                            android:id="@+id/tv_angleCorrection"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="2sp"
                            android:src="@drawable/knob"
                            android:textColor="@color/pitch_black" />

                    </LinearLayout>
                </RelativeLayout>








                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/monitor_rom"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.start.apps.pheezee.views.ArcViewInside
                            android:id="@+id/arcViewInside"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">






                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:id="@+id/testMinAngle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ebrima"
                                android:text="@string/min_angle"

                                app:layout_constraintEnd_toEndOf="parent"
                                android:textColor="@color/pitch_black"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:paddingEnd="10dp"/>

                            <TextView
                                android:id="@+id/tv_min_angle"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/round_cancel_buttons_less_stroke_black_width"
                                android:layout_width="70dp"
                                android:layout_height="26sp"
                                android:textAlignment="center"
                                android:layout_alignParentBottom="true"
                                android:paddingTop="2dp"
                                android:fontFamily="@font/ebrima"
                                android:text="0°"
                                android:textColor="@color/pitch_black"
                                android:textSize="14sp"
                                app:layout_constraintStart_toEndOf="@+id/testMinAngle" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/l_maxAngle_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:id="@+id/testMaxAngle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="15dp"
                                android:fontFamily="@font/ebrima"
                                android:text="@string/max_angle"
                                android:textColor="@color/pitch_black"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"

                                app:layout_constraintEnd_toEndOf="parent"/>

                            <TextView
                                android:id="@+id/tv_max_angle"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentBottom="true"

                                android:layout_marginEnd="10dp"
                                android:background="@drawable/round_cancel_buttons_less_stroke_black_width"

                                android:fontFamily="@font/ebrima"
                                android:paddingTop="2dp"
                                android:text="0°"
                                android:textAlignment="center"
                                android:textColor="@color/pitch_black"
                                android:textSize="14sp"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/repsContainter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:id="@+id/repsText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ebrima"
                                android:paddingEnd="8dp"
                                android:text="@string/monitor_repetitions"
                                android:textColor="@color/good_green"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="70dp"
                                android:layout_height="26sp"
                                android:textAlignment="center"

                                android:layout_marginEnd="10dp"
                                android:background="@drawable/round_cancel_buttons_less_stroke_width"

                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/Repetitions"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:fontFamily="@font/ebrima"
                                    android:textColor="@color/pitch_black"
                                    android:text="00"
                                    android:paddingTop="2dp"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_repsselected_slash"
                                    android:layout_weight="1.6"
                                    android:textAlignment="center"
                                    android:paddingTop="2dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ebrima"
                                    android:text="/"

                                    android:textColor="@color/pitch_black"
                                    android:textSize="14sp"/>
                                <TextView
                                    android:id="@+id/repsSelected"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ebrima"
                                    android:text="00"
                                    android:paddingTop="2dp"
                                    android:textColor="@color/pitch_black"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/holdtimeContainter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"

                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="2dp">

                            <TextView
                                android:id="@+id/holdtimeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ebrima"
                                android:paddingEnd="18dp"
                                android:text="Hold time"
                                android:textColor="@color/good_green"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/holdtime"

                                android:background="@drawable/round_cancel_buttons_less_stroke_width"
                                android:layout_width="70dp"
                                android:layout_height="26sp"
                                android:textAlignment="center"
                                android:fontFamily="@font/ebrima"
                                android:paddingTop="2dp"
                                android:textColor="@color/pitch_black"
                                android:text="00m:00s"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/actionTimeContainer"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp">

                            <TextView
                                android:id="@+id/actionTimeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ebrima"
                                android:text="@string/monitor_active_time"
                                android:textColor="@color/pitch_black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_action_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ebrima"
                                android:textColor="@color/pitch_black"
                                android:text="00 : 00"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_session_no"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/ebrima"
                            android:text="0"
                            android:gravity="start"
                            app:layout_constraintBottom_toBottomOf="@+id/sessionNoText"
                            app:layout_constraintEnd_toStartOf="@+id/bodyPart"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/sessionNoText"
                            app:layout_constraintTop_toBottomOf="@+id/patientName"
                            tools:ignore="UnusedAttribute" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/part2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/emg_container"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_corner_layout"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/angleContainter">

                <RelativeLayout
                    android:id="@+id/emg_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/EMG_title"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ebrima"
                        android:gravity="center"
                        android:text="Electromyogram (EMG)"
                        android:textColor="@color/good_green"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/monitor_muscle_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/EMG_title"

                        android:fontFamily="@font/ebrima"
                        android:gravity="center"
                        android:text="Body Part: "
                        android:textColor="@color/good_green2"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/increase_decrease_button"
                        android:layout_width="24dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/round_cancel_buttons_less_stroke_width"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/btn_emg_increase_gain"

                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:buttonStyle="@style/PrimaryColoredButton"
                            android:text="+"
                            android:textAlignment="center"
                            android:textColor="@color/pitch_black"
                            android:focusable="false"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/btn_emg_decrease_gain"
                            app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/btn_emg_decrease_gain"
                            android:focusable="false"
                            android:layout_width="match_parent"

                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_height="20dp"
                            android:buttonStyle="@style/PrimaryColoredButton"
                            android:maxHeight="0dp"
                            android:minHeight="0dp"
                            android:text="-"
                            android:textAlignment="center"
                            android:textColor="@color/pitch_black"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>



                    </LinearLayout>

                </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6">


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.9"

                            android:gravity="right"


                            android:paddingTop="0dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/textMaxemg"
                                android:layout_gravity="bottom"
                                android:paddingTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:fontFamily="@font/ebrima"
                                android:text="Max Emg"
                                android:textColor="@color/pitch_black"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/tv_max_emg_show"

                                android:layout_gravity="bottom|center"
                                android:layout_width="70dp"
                                android:layout_height="26sp"
                                android:textAlignment="center"
                                android:background="@drawable/round_cancel_buttons_less_stroke_black_width"
                                android:layout_marginEnd="20dp"

                                android:paddingTop="2dp"
                                android:layout_marginStart="10dp"
                                android:text="0μV"
                                android:textColor="@color/pitch_black"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:id="@+id/emg_bar"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.741"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/emgValue"

                                android:layout_gravity="bottom|center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ebrima"
                                android:text=" "
                                android:paddingTop="2dp"
                                android:textAlignment="center"
                                android:textColor="@color/pitch_black"
                                android:textSize="13sp"

                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <LinearLayout
                                android:id="@+id/emgBarContainer"
                                android:layout_marginStart="6sp"
                                android:layout_marginEnd="6sp"
                                android:layout_marginTop="4sp"
                                android:layout_marginBottom="2sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:background="@drawable/listitemlayout"
                                android:gravity="bottom"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintHorizontal_weight="0.2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <LinearLayout
                                    android:id="@+id/emg"
                                    android:layout_width="match_parent"
                                    android:layout_height="10sp"
                                    android:background="@drawable/emg_background"
                                    android:orientation="vertical">

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:orientation="vertical">



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <com.github.mikephil.charting.charts.LineChart
                                    android:id="@+id/chart"
                                    android:layout_width="match_parent"
                                    android:layout_height="210dp"/>
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1.1">

                <Button
                    android:id="@+id/cancel"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/round_cancel_buttons_red"
                    android:textAllCaps="false"
                    android:text="Cancel"
                    android:textColor="@color/pitch_black"
                    android:textSize="18sp"
                    android:theme="@style/AppTheme.customDesign.noActionBar"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/stopBtn"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/snackbar_action"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/emg_container"
                    app:layout_constraintVertical_bias="1.0" />



                <Button
                    android:id="@+id/timer"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/rounded_start_button"
                    android:textAllCaps="false"
                    android:text="Start"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:theme="@style/AppTheme.customDesign.noActionBar"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/snackbar_action"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/stopBtn"
                    app:layout_constraintTop_toBottomOf="@+id/emg_container"
                    app:layout_constraintVertical_bias="1.0" />


                <Button
                    android:id="@+id/stopBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/rounded_stop_button"
                    android:textAllCaps="false"
                    android:text="Stop"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:theme="@style/AppTheme.customDesign.noActionBar"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/timer"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/cancel"
                    app:layout_constraintTop_toBottomOf="@+id/emg_container"
                    app:layout_constraintVertical_bias="1.0" />




            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



