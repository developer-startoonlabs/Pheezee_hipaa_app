<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.22"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"

        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_listmodel"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/tv_s_no"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="@color/good_green"
                android:textSize="16sp"
                android:text="12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/tv_s_no"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="14 May"
                    android:textColor="@color/good_green"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_exercise_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="11 Exercises"
                    android:textColor="#707070"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/tv_download_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11 Exercises"

                        android:textColor="@color/good_green"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/view_button"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignTop="@+id/tv_s_no"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/round_cancel_buttons_less_stroke_width"
                android:focusable="false"
                android:text="View"
                android:textAllCaps="false"
                android:textColor="@color/good_green"
                android:textSize="13dp">

            </Button>

            <ImageView
                android:id="@+id/share_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/view_button"
                android:layout_alignBottom="@+id/view_button"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="20dp"
                android:paddingBottom="7dp"
                android:src="@drawable/ic_share_button"></ImageView>
        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
